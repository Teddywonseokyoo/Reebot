<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.exp.rb.reebot.view.RBSetting">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5">

        </android.support.v4.widget.Space>

        <LinearLayout

            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5">

            <TextView
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="변경 목록"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/textView12"
                android:layout_weight="1"
                android:fontFamily="sans-serif"
                android:textSize="18sp"
                android:textStyle="normal|bold" />

            <Spinner
                android:layout_gravity="bottom"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/spinner2"
                android:layout_weight="1" />

        </LinearLayout>

        <FrameLayout
            android:background="#3fa3f5"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.025">
        </FrameLayout>

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5">

        </android.support.v4.widget.Space>


        <TextView
            android:paddingLeft="5dp"
            android:layout_gravity="left"
            android:gravity="center"
            android:text="TV 서비스 공급자"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:textStyle="normal|bold"
            android:textSize="16sp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5">

            <TextView
                android:paddingLeft="15dp"
                android:layout_gravity="center_vertical"
                android:gravity="left"
                android:text=""
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/rbsetting_catv"
                android:layout_weight="0.5"
                android:textStyle="normal|bold"
                android:textSize="16sp" />
            <!--
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:srcCompat="@drawable/charrow"
                android:id="@+id/imageView3"
                android:layout_weight="0.5" />
               -->
            <Spinner
                android:paddingLeft="20dp"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/rbsetting_catv_spinner"
                android:layout_weight="0.5" />

        </LinearLayout>

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2">

        </android.support.v4.widget.Space>

        <TextView
            android:paddingLeft="5dp"
            android:layout_gravity="left"
            android:gravity="center"
            android:text="TV 제조사"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:textStyle="normal|bold"
            android:textSize="16sp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5">

            <TextView
                android:paddingLeft="15dp"
                android:layout_gravity="center_vertical"
                android:gravity="left"
                android:text=""
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/rbsetting_tvbreand"
                android:layout_weight="0.5"
                android:textStyle="normal|bold"
                android:textSize="16sp" />
            <!--
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:srcCompat="@drawable/charrow"
                android:id="@+id/imageView4"
                android:layout_weight="0.5" />
            -->
            <Spinner
                android:paddingLeft="20dp"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/rbsetting_tv_spinner"
                android:layout_weight="0.5" />
        </LinearLayout>

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2">
        </android.support.v4.widget.Space>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <Button
                android:layout_gravity="right"
                android:text="변경"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rbsetting_change"/>
        </FrameLayout>

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

        </android.support.v4.widget.Space>

    </LinearLayout>
</RelativeLayout>
